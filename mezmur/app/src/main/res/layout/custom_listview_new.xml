<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/gradiet"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/singer_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/davinci_code" />

    <TextView
        android:id="@+id/name_textview"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/singer_imageview"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@+id/singer_imageview"
        android:layout_toLeftOf="@+id/singer_imageview"
        android:text="Nahom NH"
        android:textSize="14sp"
        android:textStyle="bold" />


</RelativeLayout>